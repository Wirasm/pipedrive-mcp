# Server configuration
HOST=127.0.0.1  # Use 127.0.0.1 for local dev, 0.0.0.0 for containers
PORT=8152

# Transport mode: "sse" or "stdio"
TRANSPORT=sse

# Pipedrive API credentials
PIPEDRIVE_API_TOKEN=your_api_token_here
# Only the subdomain part between https:// and .pipedrive.com
# For example, if your domain is "mycompany.pipedrive.com", enter "mycompany"
PIPEDRIVE_COMPANY_DOMAIN=your_company_subdomain

# Security settings
CONTAINER_MODE=false  # Set to true when running in Docker
VERIFY_SSL=true  # Set to false if you encounter SSL certificate issues (dev only)

# Optional Pipedrive settings
PIPEDRIVE_TIMEOUT=30  # API request timeout in seconds
PIPEDRIVE_RETRY_COUNT=3  # Number of retries for failed requests
